# login.kv

<LoginWindow>:
    name: 'login_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 0]
        Label:
            text: 'SIGN IN'
            font_size: 100
            size_hint_y: 0.5

        GridLayout:
            name: 'signin_form'
            cols: 2
            row_default_height: 120
            row_force_default: True
            spacing: 20

            Label:
                text: 'Email'
                halign: 'right'

            TextInput:
                id: email
                multiline: False
                write_tab: False

            Label:
                text: 'Password'
                halign: 'right'

            TextInput:
                id: password
                password: True
                multiline: False
                write_tab: False

        RoundedButton:
            text: 'SUBMIT'
            size_hint: (0.5, 0.2)
            pos_hint: {'center_x': 0.5}
            on_press: root.on_login()

            on_release:
                if root.is_signed_in:\
                app.root.current = 'option_screen'
                root.manager.transition.direction = 'left'
                root.is_signed_in = False

        GridLayout:
            cols: 2
            size_hint_y: 0.3

            Label:
                text: "Don't have an account ?"

            Label:
                text: "Sign up"
                color: 0, 1, 1, 1
                on_touch_down:
                    if self.collide_point(*args[1].pos):\
                    app.root.current = 'signup_screen'
                    root.manager.transition.direction = 'right'