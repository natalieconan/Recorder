# signup.kv

<SignupWindow>:
    name: 'signup_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        Label:
            text: 'SIGN UP'
            font_size: 100
            size_hint_y: 0.5

        GridLayout:
            name: 'signup_form'
            cols: 2
            row_default_height: 120
            row_force_default: True
            spacing: 20

            Label:
                text: 'Username'
                halign: 'right'

            TextInput:
                id: username
                multiline: False

            Label:
                text: 'Email'
                halign: 'right'

            TextInput:
                id: email
                multiline: False

            Label:
                text: 'Password'
                halign: 'right'

            TextInput:
                id: password
                password: True
                multiline: False

            Label:
                text: 'Password Confirm'
                halign: 'right'

            TextInput:
                id: password_confirm
                password: True
                multiline: False

        RoundedButton:
            text: 'SUBMIT'
            size_hint_y: 0.2
            border: 30,30,30,30
            pos_hint: {'center_x': 0.5}
            on_press: root.on_signup()

            on_release: 
                app.root.current = 'login_screen'
                root.manager.transition.direction = 'left'
